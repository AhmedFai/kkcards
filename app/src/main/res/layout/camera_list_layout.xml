<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:elevation="20dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/dim_80"
            android:layout_height="@dimen/dim_80"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginLeft="@dimen/dim_2"
            android:layout_alignParentLeft="true"
            android:src="@drawable/dummy"
            android:layout_alignParentStart="true" />

        <!--  <TextView
              android:id="@+id/time_on_image"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textSize="10dp"
              android:textColor="@color/list_item_title"
              android:layout_alignTop="@+id/image1"
              android:background="#00B0F0"
              android:layout_alignRight="@+id/image1"
              android:layout_alignEnd="@+id/image1" />-->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DSLR Camera"
            android:textColor="@color/black"
            android:id="@+id/cam_name"
            android:textSize="@dimen/dim_20"
            android:textStyle="bold"
            android:layout_alignTop="@+id/image1"
            android:layout_toRightOf="@+id/image1"
            android:layout_toEndOf="@+id/image1"
            android:layout_marginLeft="@dimen/dim_15"
            ></TextView>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="A-42,Vasant Kunj, 100995"
            android:id="@+id/cam_detail"
            android:layout_marginLeft="@dimen/dim_15"
            android:layout_marginTop="@dimen/dim_5"
            android:layout_below="@+id/cam_name"
            android:layout_toRightOf="@+id/image1"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/image1"
                android:layout_marginTop="10dp"
                android:id="@+id/view1"
                android:background="@color/dark_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="350"
                android:textColor="@color/black"
                android:id="@+id/price"
                android:layout_below="@+id/view1"
                android:textSize="@dimen/dim_20"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dim_10"
                android:layout_marginLeft="@dimen/dim_15"
                ></TextView>




            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/book"
                android:text="BOOK NOW"
                android:textSize="@dimen/dim_10"
                android:background="#54bea5"
                android:padding="@dimen/dim_10"
                android:textColor="@color/list_item_title"
                android:layout_below="@+id/view1"
                android:layout_marginTop="@dimen/dim_10"
               android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>