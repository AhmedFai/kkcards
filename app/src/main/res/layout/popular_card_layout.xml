<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_row_border"
    >



    <ImageView
        android:layout_width="@dimen/dim_100"
        android:layout_height="@dimen/dim_100"
        android:id="@+id/cat_img"
        android:layout_marginTop="@dimen/dim_10"
        android:layout_gravity="center"
        />



    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:id="@+id/cat_name"
        android:text=""
        android:maxLines="2"
        android:layout_marginLeft="@dimen/dim_8"
        android:layout_marginRight="@dimen/dim_8"
        android:textAlignment="center"
        android:layout_width="@dimen/dim_100"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dim_10"
        >
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:id="@+id/cat_price_sale"
            android:text="1000"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/cat_price"
            android:text="1500"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/></LinearLayout>
</LinearLayout>
